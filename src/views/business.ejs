<div class="container">
  <div class="row business-header">

    <div class="col-md-8">
      <div class="row">
        <h1 class="dr-name"><%- business.name -%></h1>
        <p class="business-by-line"> <%- business.formatted_address -%></p>
        <p class="business-by-line"> <%- business.formatted_phone_number -%></p>
      </div>

      <div class="row">
        <% if (reviews.length === 0) { %>
          <p>Be the first to review!</p>
        <% } else { %>

          <div class="col-md-4">
            <div>
              <span class="summary-item">
                <%- business.overallRating -%>
              </span>
              <img src="/static/star-highlight.png" class="indicator" />
            </div>
            <span>Overall Rating</span>
          </div>

          <div class="col-md-4">
            <div>
              <span class="summary-item">
                <%- business.reviewCount -%>
              </span>
              <img src="/static/check-small.png" class="indicator" />
            </div>
            <span>Total reviews</span>
          </div>
        <% } %>
      </div>
    </div>

    <div class="col-md-4">
      <img
      class="img-thumbnail"
      src="<%- photoURL -%>"
      />
    </div>
  </div>

