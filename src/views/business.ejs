<div class="container">
  <div class="row business-header">
    <div class="col-md-4">
      <img
      class="img-thumbnail"
      src="<%- photoURL -%>"
      />
    </div>
    <div class="col-md-8">
      <div class="row">
        <h1 class="dr-name"><%- business.name -%></h1>
        <p class="business-by-line"> <%- business.formatted_address -%></p>
        <p class="business-by-line"> <%- business.formatted_phone_number -%></p>
      </div>
      <div class="row">
        <% if (reviews.length === 0) { %>
        <p>Be the first to review!</p>
        <% } else { %>
        <p>score: <%- business.overallRating -%> from <%- business.reviewCount -%> users </p>
        <div>
          <%- business.bodyPositivityAverageRating -%> body positivity
          <%- business.bodyPositivityRatingCount -%> body positivity rating count
        </div>
        <% } %>
      </div>
      <div class="row">
        <a class="btn btn-info review-button" href="/businesses/<%- googleId -%>/reviews/new" role="button">Review</a>
      </div>
    </div>
  </div>
  <div class="row reviews-title">
    <div class="col-md-12">
      <% if (reviews.length != 0) { %>
          <h2>Reviews</h2>
          <ul class="list-group">
            <% for (const review of reviews) { %>
              <li class="list-group-item">
                <div class="row reviewer-headline">
                  <%- review.user.name -%> on <%- review.date -%> says:
                </div>
                <div class="row">
                  <%- review.content -%>
                </div>
              </li>
            <% } %>
          </ul>

      <% } %>
    </div>
  </div>
</div>

<%- contentFor('title') -%>
Ample | <%- business.name -%>
