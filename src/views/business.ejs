  <div class="row">

    <div class="col-md-3">
      <h2>Reviews</h2>
    </div>

    <div class="col-md-4">
      <a
        class="btn btn-info review-button"
        href="/businesses/<%- googleId -%>/reviews/new"
        role="button"> Add Your Review </a>
    </div>
  </div>

  <div class="row reviews-title">
    <div class="col-md-12">
      <% if (reviews.length != 0) { %>
          <ul class="list-group">
            <% for (const review of reviews) { %>
              <li class="list-group-item">
                <div class="row reviewer-headline">
                  <%- review.user.name -%> on <%- review.date -%> says:
                </div>
                <div class="row">
                  <%- review.content -%>
                </div>
              </li>
            <% } %>
          </ul>

      <% } %>
    </div>
  </div>
</div>

<%- contentFor('scripts') -%>
<script>
new ample.StarRatingView(document.getElementById('body-positivity-rating'))
new ample.StarRatingView(document.getElementById('lgbtq-inclusivity-rating'))
new ample.StarRatingView(document.getElementById('poc-inclusivity-rating'))
new ample.StarRatingView(document.getElementById('building-accessibility-rating'))
new ample.StarRatingView(document.getElementById('furniture-size-rating'))
new ample.StarRatingView(document.getElementById('overall-rating'))
</script>

