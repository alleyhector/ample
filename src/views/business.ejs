<div class="container">
  <div class="row business-header">
    <div class="col-md-4">
      <img
      class="img-thumbnail"
      src="<%- photoURL -%>"
      />
    </div>
    <div class="col-md-8">
      <h1 class="dr-name"><%- name -%></h1>
      <p class="business-by-line"> <%- formatted_address -%></p>
      <p class="business-by-line"> <%- formatted_phone_number -%></p>
      <% if (reviews.length === 0) { %>
      <p>Be the first to review!</p>
      <% } else { %>
      <p>score: <%- rating -%> from <%- reviewCount -%> users </p>
      <% } %>
      <a class="btn btn-info review-button" href="/businesses/<%- googleId -%>/reviews/new" role="button">Review</a>
    </div>
  </div>
  <div class="row reviews-title">
    <div class="col-md-12">
      <% if (reviews.length != 0) { %>
          <h2>Reviews</h2>
          <ul class="list-group">
            <% for (const review of reviews) { %>
              <li class="list-group-item">
                <div class="row reviewer-headline">
                  <%- review.user.name -%> on <%- review.date -%> says:
                </div>
                <div class="row">
                  <%- review.content -%>
                </div>
              </li>
            <% } %>
          </ul>

      <% } %>
    </div>
  </div>
</div>

<%- contentFor('title') -%>
Ample | <%- name -%>
